{% block navbar %}
  <nav class="navbar navbar-expand-lg navbar-dark bg-black p-2">
    <a class="navbar-brand" href="#">
      <img src="{{ asset('build/images/logo-biotech.png') }}" alt="BD logo" /> LaGalaxy
      tickets
    </a>
    <button class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarColor01"
      aria-controls="navbarColor01"
      aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav mr-auto w-100">
        {% if not app.user %}
          <li class="nav-item">
            <a class="nav-link" href="/login">Se connecter</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/register">S'inscrire</a>
          </li>
        {% else %}
          <li class="nav-item">
            <a class="nav-link" href="/ticket/on">Tickets ouverts</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/ticket/off">Tickets traités</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/ticket/new">Créer un ticket</a>
          </li>
        {% endif %}
      </ul>
      {% if app.user %}
        <div class="text-end w-100">
          <a href="{{ path('app_logout') }}" class="text-white">
            <i class="fa-solid fa-arrow-right-from-bracket"></i> Se déconnecter
          </a>
        </div>
      {% endif %}
    </div>
  </nav>
{% endblock %}
